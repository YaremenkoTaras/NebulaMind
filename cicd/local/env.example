# NebulaMind Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ====================
# Application Profile
# ====================
SPRING_PROFILES_ACTIVE=sandbox
# Options: sandbox, development, production

# ====================
# Trading Core (Port 8081)
# ====================
CORE_PORT=8081
CORE_LOG_LEVEL=INFO

# ====================
# Agent Builder (Port 8082)
# ====================
AGENT_PORT=8082
AGENT_LOG_LEVEL=INFO

# ====================
# Agent Console (Port 8083)
# ====================
CONSOLE_PORT=8083

# ====================
# Binance API Configuration
# ====================
# IMPORTANT: Use testnet credentials for development!
# Testnet: https://testnet.binance.vision/
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_BASE_URL=https://testnet.binance.vision
# Production: https://api.binance.com

# ====================
# OpenAI / LLM Configuration
# ====================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# ====================
# Risk Management
# ====================
RISK_MAX_PCT_EQUITY=5.0
RISK_STOP_LOSS_PCT=2.0
RISK_DAILY_LOSS_LIMIT_PCT=10.0

# ====================
# Security
# ====================
# Bearer token for accessing admin endpoints
ADMIN_TOKEN=change_me_to_random_secure_token

# ====================
# Database (Optional)
# ====================
# If using PostgreSQL for trade history
# DATABASE_URL=postgresql://localhost:5432/nebulamind
# DATABASE_USERNAME=nebulamind
# DATABASE_PASSWORD=your_db_password

# ====================
# Logging
# ====================
LOG_DIR=./logs
LLM_TRADES_LOG_PATH=./logs/llm-trades.log

# ====================
# Fly.io Deployment (Optional)
# ====================
# FLY_APP_NAME=nebulamind
# FLY_REGION=fra

